{
  "title": "Key remapping on Keynote",
  "rules": [
    {
      "description": "Swap STYLEed text-paste and PLAIN text-paste on Keynote",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "v",
            "modifiers": {
              "mandatory": [
                "left_command"
              ]
            }
          },
          "to": {
            "key_code": "v",
            "modifiers": [
              "left_command",
              "left_shift",
              "left_option"
            ]
          },
          "conditions": [
            {
              "type": "frontmost_application_if",
              "bundle_identifiers": [
                "^com\\.apple\\.iWork\\.Keynote$"
              ]
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "v",
            "modifiers": {
              "mandatory": [
                "left_command",
                "left_shift",
                "left_option"
              ]
            }
          },
          "to": {
            "key_code": "v",
            "modifiers": [
              "left_command"
            ]
          },
          "conditions": [
            {
              "type": "frontmost_application_if",
              "bundle_identifiers": [
                "^com\\.apple\\.iWork\\.Keynote$"
              ]
            }
          ]
        }
      ]
    }
  ]
}
